@using ePizzaHub.Core.Entities;
@model IEnumerable<Item>
@{
    ViewData["Title"] = "Home Page";
    Layout = "_FullSizeLayout";
}

<div style="background:#1a5ca3">
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <div class="pt-5 pb-5 text-white">
                    <h1>ePizza Hub's Online Ordering WebSite!</h1>
                    <p class="pb-4">
                        Yummy pizza delivered fast at your door step!
                    </p>
                    <p>
                        <a href="#heading" class="btn btn-success">ORDER ONLINE NOW</a>
                    </p>
                </div>
            </div>
            <div class="col-sm-4 pt-4">
                <img src="~/images/pizza-header.png" class="img-fluid" />
            </div>
        </div>
    </div>
</div>
<div class="container mt-4">
    <h2>Pizza, Beverage</h2>
    <hr />
    <div class="row mt-4">
        @foreach (var item in Model)
        {
            <div class="col-sm-4 mb-3">

                <div class="card">
                    <img src="@item.ImageUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p>
                            <span class="pt-1 d-inline-block"> Size: Regular</span>
                            <span class="float-end font-20">
                                <a href="javascript:void(0)" onclick="AddToCart('@item.Id','@item.Name','@item.UnitPrice',1)" class="btn btn-outline-primary">Add To Cart</a>
                            </span>
                        </p>
                    </div>
                </div>

            </div>
        }
    </div>
</div>

<div class="toast fade hide" data-autohide="false" id="toastCart">
    <div class="toast-header">
        <strong class="me-auto text-primary">Notification</strong>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body"></div>
</div>